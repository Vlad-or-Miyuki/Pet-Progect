	<RecipeDef ParentName="SurgeryInstallBodyPartNaturalBase">
		<defName>InstallBrain</defName>
		<label>install Brain</label>
		<description>Install the brain.</description>
		<descriptionHyperlinks><ThingDef>Brain</ThingDef></descriptionHyperlinks>
		<jobString>Installing Brain.</jobString>
		<workAmount>3000</workAmount>
		<deathOnFailedSurgeryChance>0.50</deathOnFailedSurgeryChance>
		<skillRequirements>
			<Medicine>8</Medicine>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Brain</li>
					</thingDefs>
				</filter>
				<count>1</count>
