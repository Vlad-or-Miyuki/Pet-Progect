<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Prosthetic -->
	<HediffDef ParentName="AddedBodyPartBase">
		<defName>ProstheticBrain</defName>
		<label>prosthetic brain</label>
		<labelNoun>a prosthetic brain</labelNoun>
		<description>An installed prosthetic brain.</description>
		<descriptionHyperlinks><ThingDef>ProstheticBrain</ThingDef></descriptionHyperlinks>
		<spawnThingOnRemoved>ProstheticBrain</spawnThingOnRemoved>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>0.80</partEfficiency>
		</addedPartProps>
	</HediffDef>

	<!-- Bionic -->
	<HediffDef ParentName="AddedBodyPartBase">
		<defName>BionicBrain</defName>
		<label>bionic brain</label>
		<labelNoun>a bionic brain</labelNoun>
		<description>An installed bionic brain.</description>
		<descriptionHyperlinks><ThingDef>BionicBrain</ThingDef></descriptionHyperlinks>
		<spawnThingOnRemoved>BionicBrain</spawnThingOnRemoved>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>1.25</partEfficiency>
			<betterThanNatural>true</betterThanNatural>
		</addedPartProps>
	</HediffDef>

	<!-- Archotech -->
	<HediffDef ParentName="AddedBodyPartBase">
		<defName>ArchotechBrain</defName>
		<label>archotech brain</label>
		<labelNoun>an archotech brain</labelNoun>
		<description>An installed archotech brain.</description>
		<descriptionHyperlinks><ThingDef>ArchotechBrain</ThingDef></descriptionHyperlinks>
		<spawnThingOnRemoved>ArchotechBrain</spawnThingOnRemoved>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>1.50</partEfficiency>
		</addedPartProps>
	</HediffDef>

</Defs>
